<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import
		resource="classpath:/WEB-INF/population/conversion-service.xml" />

	<!-- Anonymous user -->

	<bean name="anonymousUserAccount"
		class="acme.framework.entities.UserAccount">
		<property name="username" value="anonymous" />
		<property name="password" value="anonymous" />
		<property name="enabled" value="false" />
		<property name="identity">
			<bean class="acme.datatypes.UserIdentity">
				<property name="name" value="John" />
				<property name="surname" value="Doe" />
				<property name="email" value="john.doe@acme.com" />
			</bean>
		</property>
		<property name="roles">
			<list>
				<ref bean="anonymousAnonymous" />
			</list>
		</property>
	</bean>

	<bean name="anonymousAnonymous"
		class="acme.framework.entities.Anonymous">
		<property name="userAccount" ref="anonymousUserAccount" />
	</bean>

	<!-- Administrators -->

	<bean name="administratorUserAccount"
		class="acme.framework.entities.UserAccount">
		<property name="username" value="administrator" />
		<property name="password" value="administrator" />
		<property name="enabled" value="true" />
		<property name="identity">
			<bean class="acme.datatypes.UserIdentity">
				<property name="name" value="Administrator" />
				<property name="surname" value="Acme.com" />
				<property name="email" value="administrator@acme.com" />
			</bean>
		</property>
		<property name="roles">
			<list>
				<ref bean="administratorAdministrator" />
				<ref bean="administratorAuthenticated" />
			</list>
		</property>
	</bean>

	<bean name="administratorAdministrator"
		class="acme.framework.entities.Administrator">
		<property name="userAccount" ref="administratorUserAccount" />
	</bean>

	<bean name="administratorAuthenticated"
		class="acme.framework.entities.Authenticated">
		<property name="userAccount" ref="administratorUserAccount" />
	</bean>

	<!-- Managers -->
	
	<bean name="managerUserAccount1"
		class="acme.framework.entities.UserAccount">
		<property name="username" value="manager1" />
		<property name="password" value="manager1" />
		<property name="enabled" value="true" />
		<property name="identity">
			<bean class="acme.datatypes.UserIdentity">
				<property name="name" value="manager1" />
				<property name="surname" value="manager1" />
				<property name="email" value="manager1@acme.com" />
			</bean>
		</property>
		<property name="roles">
			<list>
				<ref bean="managerManager1" />
				<ref bean="managerAuthenticated1" />
			</list>
		</property>
	</bean>

	<bean name="managerManager1"
		class="acme.framework.entities.Manager">
		<property name="userAccount" ref="managerUserAccount1" />
		<property name="company" value="US" />
		<property name="sector" value="Teaching" />
	</bean>

	<bean name="managerAuthenticated1"
		class="acme.framework.entities.Authenticated">
		<property name="userAccount" ref="managerUserAccount1" />
	</bean>
	
	
	
	
	
	<bean name="managerUserAccount2"
		class="acme.framework.entities.UserAccount">
		<property name="username" value="manager2" />
		<property name="password" value="manager2" />
		<property name="enabled" value="true" />
		<property name="identity">
			<bean class="acme.datatypes.UserIdentity">
				<property name="name" value="manager2" />
				<property name="surname" value="manager2" />
				<property name="email" value="manager1@acme.com" />
			</bean>
		</property>
		<property name="roles">
			<list>
				<ref bean="managerManager2" />
				<ref bean="managerAuthenticated2" />
			</list>
		</property>
	</bean>

	<bean name="managerManager2"
		class="acme.framework.entities.Manager">
		<property name="userAccount" ref="managerUserAccount2" />
		<property name="company" value="US" />
		<property name="sector" value="Teaching" />
	</bean>

	<bean name="managerAuthenticated2"
		class="acme.framework.entities.Authenticated">
		<property name="userAccount" ref="managerUserAccount2" />
	</bean>

</beans>
